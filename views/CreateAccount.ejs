<html>
  <%-include('Nav')-%>
  <body>
    <div
      class="container"
      style="
        border: 1px solid #ccc;
        border-radius: 5;
        padding: 20;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      "
    >
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <form>
            <div class="row">
              <div class="col" style="color: #212529; font-weight: bold">
                Enter Pin
                <input type="text" name="pn" class="form-control" />
              </div>
            </div>

            <div class="row">
              <div class="col" style="color: #212529; font-weight: bold">
                Enter Name <input type="text" name="n" class="form-control" />
              </div>
              <div class="col" style="color: #212529; font-weight: bold">
                Enter FName
                <input type="text" name="fn" class="form-control" />
              </div>
            </div>

            <div class="row">
              <div class="col" style="color: #212529; font-weight: bold">
                Enter Email
                <input type="text" name="e" class="form-control" />
              </div>
              <div class="col" style="color: #212529; font-weight: bold">
                Enter Phone
                <input type="text" name="p" class="form-control" />
              </div>
            </div>

            <div class="row">
              <div class="col" style="color: #212529; font-weight: bold">
                Enter Gender
                <input type="text" name="g" class="form-control" />
              </div>
            </div>

            <div class="row">
              <div class="col" style="color: #212529; font-weight: bold">
                Enter Coutry
                <input type="text" name="c" class="form-control" />
              </div>
              <div class="col" style="color: #212529; font-weight: bold">
                Enter State
                <input type="text" name="s" class="form-control" />
              </div>
              <div class="col" style="color: #212529; font-weight: bold">
                Enter City
                <input type="text" name="ci" class="form-control" />
              </div>
            </div>

            <div class="row">
              <div class="col" style="color: #212529; font-weight: bold">
                Enter Amount
                <input type="text" name="am" class="form-control" />
              </div>
            </div>
            <br />
            <br />
            <input
              class="btn btn-success"
              type="submit"
              name="submit"
              value="Create Account"
            />
            <br />
            <br />
          </form>
          <h3><%= msg %></h3>
        </div>
      </div>
    </div>
  </body>
</html>
