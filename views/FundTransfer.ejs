<html>
  <%- include('Nav') -%>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <div class="">
            <div class="card-body p-5">
              <form>
                <h1 class="font-weight-light text-center mb-5">
                  Fund Transfer Page
                </h1>
                <div class="form-group row mb-3">
                  <label
                    class="col-sm-4 col-form-label"
                    style="color: #212529; font-weight: bold"
                  >
                    Sender Account Number
                  </label>
                  <div class="col-sm-8">
                    <input
                      type="text"
                      name="sac"
                      class="form-control"
                      placeholder="Sender Account Number"
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label
                    class="col-sm-4 col-form-label"
                    style="color: #212529; font-weight: bold"
                  >
                    Sender Account pin
                  </label>
                  <div class="col-sm-8">
                    <input
                      name="spn"
                      placeholder="Sender Account pin"
                      type="number"
                      class="form-control"
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label
                    class="col-sm-4 col-form-label"
                    style="color: #212529; font-weight: bold"
                  >
                    Enter Amount to Send
                  </label>
                  <div class="col-sm-8">
                    <input
                      name="am"
                      placeholder="Amount to Send"
                      type="number"
                      class="form-control"
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label
                    class="col-sm-4 col-form-label"
                    style="color: #212529; font-weight: bold"
                  >
                    Enter Reciever Account Number
                  </label>
                  <div class="col-sm-8">
                    <input
                      name="rac"
                      placeholder="Reciever Account Number"
                      type="text"
                      class="form-control"
                    />
                  </div>
                </div>

                <div class="text-center">
                  <input
                    type="submit"
                    value="Transfer"
                    name="submit"
                    class="btn btn-primary btn-lg px-5 py-3"
                  />
                </div>
                <div class="row mb-3">
                  <div class="col-sm-12"></div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-md-2"><h3><%= msg %></h3></div>
      </div>
    </div>
  </body>
</html>
